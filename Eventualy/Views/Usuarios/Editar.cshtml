@model Eventualy.Business.Dtos.Usuarios.UsuarioAsignarRol

@{
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form id="formulario" asp-action="Editar" onsubmit="return jQueryAjaxPost(this, 'Crear cliente', '¿Desea crear el cliente?')" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />            
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" readonly class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rol" class="control-label"></label>
                <select asp-items="@ViewBag.ListaRoles" asp-for="Rol" class="form-control">
                    <option disabled>--- Seleccione ---</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" id="submit-all" />
            </div>
        </form>
    </div>
</div>

<script src="~/js/site.js"></script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

