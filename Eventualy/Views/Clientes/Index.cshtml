@model IEnumerable<Eventualy.Model.Entities.Cliente>
@section Styles{

}
<div class="content">
    <div class="container-fluid">
        <div class="table-responsive">
            <br />
            <div class="col-md-5">
                <h2>Gestión de <b>@ViewBag.Titulo</b></h2>
            </div>
            <br />
            <div class="col-md-7">
                <a onclick="mostrarModal('@Url.Action("Crear","Clientes",null,Context.Request.Scheme)','Crear cliente')" class="btn btn-success">Crear Cliente </a>
            </div>
            @if (Model.Count() == 0)
            {
                <p>No existen clientes</p>
            }
            else
            {


                <br />
                <table class="table" id="tabla">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.TipoDocumentoId)</th>
                            <th>@Html.DisplayNameFor(model => model.Documento)</th>
                            <th>@Html.DisplayNameFor(model => model.Estado)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Nombres</td>
                                <td>@cliente.Email</td>
                                <td>@cliente.TiposDocumento.Nombre</td>
                                <td>@cliente.Documento</td>
                                <td>@cliente.Estado</td>
                                <td>
                                    <a class="text-success" asp-action="Detalle" asp-route-id="@cliente.ClienteId"><i title="Detalle" class="fas fa-search"></i></a> |
                                    <a href="javascript:mostrarModal('@Url.Action("Editar","Clientes",new {id=cliente.ClienteId},Context.Request.Scheme)','Editar cliente')" ><i title="Editar" class="fas fa-edit"></i></a>
                                    <a class="text-danger" asp-action="Eliminar" onclick="return confirm('¿Está seguro de eliminar el cliente?')" asp-route-id="@cliente.ClienteId"><i title="Eliminar" class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/site.js"></script>
    <script src="~/js/tabla.js"></script>
    <script>
        @if(TempData["Accion"]!=null && TempData["Accion"].ToString().Equals("Guardar")) {
            <Text>
                alertify.set('notifier', 'position', 'top-right');
                alertify.notify('@TempData["Mensaje"]', 'success', 5, function () {
            });
            </text>
        }
    </script>
}
