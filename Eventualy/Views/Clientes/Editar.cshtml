@model Eventualy.Model.Entities.Cliente
@{ 
    Layout = null;
}

<form asp-action="Editar" id="formulario" onsubmit="return jQueryAjaxPost(this, 'Editar cliente', '¿Desea editar el cliente?')">

    <input type="hidden" asp-for="ClienteId" />
    <input type="hidden" asp-for="Estado" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="Nombres" class="control-label"></label>
            <input type="text" asp-for="Nombres" class="form-control" />
            <span asp-validation-for="Nombres" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="TipoDocumentoId" class="control-label"></label>
            <select asp-for="TipoDocumentoId" asp-items="ViewBag.TiposDocumento" class="form-control">
                <option disabled selected>--- Seleccione ---</option>
            </select>
            <span asp-validation-for="TipoDocumentoId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="Documento" class="control-label"></label>
            <input type="text" asp-for="Documento" class="form-control" />
            <span asp-validation-for="Documento" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <label asp-for="Email" class="control-label"></label>
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <input type="submit" value="Editar" class="btn btn-success" />
        </div>
    </div>
</form>
<script src="~/js/site.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")